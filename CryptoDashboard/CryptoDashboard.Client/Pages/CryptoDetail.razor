@page "/crypto-detail/{pairName}"
@inject ApiService ApiService
@inject NavigationManager NavigationManager

@code {
    [Parameter]
    public string PairName { get; set; }

    private List<CryptoPair> cryptoPairDetails;

    protected override async Task OnInitializedAsync()
    {
        cryptoPairDetails = await ApiService.GetCryptoPairDetailsAsync(PairName);
    }
}

<h3>@PairName Details</h3>

@if (cryptoPairDetails != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Open</th>
                <th>Close</th>
                <th>High</th>
                <th>Low</th>
                <th>Price</th>
                <th>Volume</th>
                <th>Change (%)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in cryptoPairDetails)
            {
                <tr>
                    <td>@detail.Date.ToShortDateString()</td>
                    <td>@detail.Open</td>
                    <td>@detail.Close</td>
                    <td>@detail.High</td>
                    <td>@detail.Low</td>
                    <td>@detail.Price</td>
                    <td>@detail.Volume</td>
                    <td>@detail.ChangePercentage %</td>
                </tr>
            }
        </tbody>
    </table>
}
